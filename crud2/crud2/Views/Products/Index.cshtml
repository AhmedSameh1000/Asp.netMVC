@model IEnumerable<Product>
@{
    ViewData["title"] = "store";
}
<h2>
    <i class="fa-regular fa-image"></i>
    products
</h2>
<hr></hr>
<a class="btn btn-primary " asp-action="create">
    <i class="me-2 fa-regular fa-square-plus"></i>Add product
</a>


<div class="mt-4">
@if(!@Model.Any())
{
    <div class="alert alert-warning" role="alert">
            <i class="fa-solid fa-triangle-exclamation"></i>  no products found
    </div>
}
else{
    <div >
        <div class="row mb-3  justify-content-between">
                <div class="w-25 col-4 btn btn-dark">Name</div>
                <div class="w-25 col-4 btn btn-dark"> Price</div>
                <div class="w-25 col-4 btn btn-dark"> ProductId</div>
        </div>
        @foreach (var item in Model)
        {
             <div class="row justify-content-between">
                 <div class="w-25 col-4  btn btn-secondary mb-3">@item.Name</div>
                <div class="w-25 col-4 btn btn-secondary mb-3">@item.price</div>
                    <div class="w-25 col-4  btn btn-secondary mb-3">@item.CategoryId</div>
             </div>
        }
    </div>
}
</div>