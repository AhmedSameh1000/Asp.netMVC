@model ProductViewModel

@{
    ViewData["Title"] = "Product Form";
}
<h2>Create Product</h2>
<hr />
<div class="container">
    <div class=" w-100 h-100 row justify-content-between">
        <form method="post" class="col-4" asp-action="Create">
            <div class="form-group">
                <label class="text-muted" asp-for="Name"></label>
                <input type="text" class="w-50 form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <label class="text-muted" asp-for="CategoryId"></label>
                <i class="fa-solid fa-arrow-down"></i>
                <select class="w-50 form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.categories,"Id","Name"))">
                    <option></option>
                </select>
            </div>
            <div class="form-group">
                <label class="text-muted" asp-for="price"></label>
                <input type="text" class="w-50 form-control" asp-for="price" value="" />
            </div>
          
            <div class="d-flex">
                <button type="submit" class="btn btn-primary mt-3">
                    <i class="fa-solid fa-check"></i>
                    save
                </button>
                <a href="index" class="mt-3 ms-3 btn btn-outline-secondary">
                    <i class="fa-solid fa-xmark"></i>
                    cancel
                </a>
            </div>
        </form>

    </div>
</div>
